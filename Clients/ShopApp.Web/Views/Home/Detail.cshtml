@model ProductViewModel
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <img src="/@Model.Picture" style="height:50%; width:50%;" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Price: @Model.Price $</h4>
                <div id="plusMinus">
                    <button type="button" id="sub" class="sub btn btn-light btn-sm">-</button>
                    <input type="text" id="input_amount" name="@Model.Quantity" value="@Model.Quantity" min="1" max="99" disabled />
                    <button type="button" id="add" class="add btn btn-light btn-sm">+</button>
                </div>
                <div class="d-grid">
                    <a dataid="@Model.Id" class="add-to-cart btn btn-primary">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/cart.js"></script>
}